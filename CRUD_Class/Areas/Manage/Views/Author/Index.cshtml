@model List<Author>
@{
    int counter = 0;
}

<div class="container-fluid">
    <div class="row justify-content-between align-items-center">
        <h1>Authors</h1>
        <a class="btn btn-primary" asp-controller="Author" asp-action="create">Create</a>
    </div>
    <table class="table contact-form">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Name</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var authors in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@authors.FullName</td>
                    <td>
                        <a asp-controller="Author" asp-action="update" asp-route-id="@authors.Id" class="btn btn-success">Update</a>
                        <a asp-controller="Author" asp-action="delete" asp-route-id="@authors.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
